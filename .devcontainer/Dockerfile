RUN apt-get update && \
    apt-get -y install \
    build-essential \
    cargo \
    cmake \
    curl \
    git \
    libreadline-dev \
    libssl-dev \
    libyaml-dev \
    libzip-dev \
    ninja-build \
    pre-commit \
    python3-pip \
    ruby \
    tar \
    unzip \
    zip && \
    apt-get clean
